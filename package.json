{
  "name": "chat-app",
  "version": "0.0.1",
  "description": "",
  "author": "linh.phan",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"{apps,libs,test}/**/*.ts\"",
    "start": "nest start api",
    "start:dev": "nest start api --watch",
    "start:api": "nest start api",
    "start:api:dev": "nest start api --watch",
    "start:api:debug": "nest start api --debug --watch",
    "start:api:prod": "node dist/apps/api/src/main",
    "prestart:prod": "typeorm -d ./dist/libs/data-source.js migration:run",
    "start:prod": "yarn start:api:prod",
    "start:socket": "nest start socket",
    "start:socket:dev": "nest start socket --watch",
    "start:socket:debug": "nest start socket --debug --watch",
    "start:socket:prod": "node dist/apps/socket/src/main",
    "lint": "eslint \"{apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./apps/api/test/jest-e2e.json --passWithNoTests --forceExit --runInBand",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "dependencies": {
    "@nestjs/common": "9.4.1",
    "@nestjs/config": "2.3.2",
    "@nestjs/core": "9.4.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "9.4.1",
    "@nestjs/mongoose": "9.2.2",
    "@nestjs/platform-express": "9.4.1",
    "@nestjs/swagger": "6.3.0",
    "@nestjs/terminus": "9.2.2",
    "class-transformer": "0.4.0",
    "class-validator": "0.14.0",
    "helmet": "5.0.1",
    "ioredis": "4.28.2",
    "lodash": "4.17.21",
    "mongoose": "6.1.5",
    "morgan": "1.10.0",
    "nanoid": "3.3.4",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.2.0",
    "swagger-ui-express": "4.3.0",
    "tapable": "1.1.3",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "9.5.0",
    "@nestjs/schematics": "9.2.0",
    "@nestjs/testing": "9.4.1",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/express": "4.17.13",
    "@types/ioredis": "4.28.2",
    "@types/jest": "27.0.2",
    "@types/lodash": "4.14.168",
    "@types/node": "16.11.11",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "eslint": "8.41.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "7.0.4",
    "jest": "29.5.0",
    "prettier": "2.8.8",
    "source-map-support": "0.5.20",
    "supertest": "6.1.6",
    "ts-jest": "29.1.0",
    "ts-loader": "9.2.3",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "5.0.4",
    "webpack": "5.83.1"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
